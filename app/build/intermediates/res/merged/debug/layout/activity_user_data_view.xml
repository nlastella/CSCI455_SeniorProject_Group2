<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.csci455_group2.nyit.csci455_seniorproject_group2.UserDataViewActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemsPurchased"
        android:entries="@+id/list_of_items"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/moneySpentTotalLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moneySpentTotalLabel"
        android:text="The total amount of money spent is:"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_alignRight="@+id/listItemsPurchased"
        android:layout_alignEnd="@+id/listItemsPurchased" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moneySpentTotalDynamic"
        android:text="temp text - variable goes here"
        android:layout_alignTop="@+id/moneySpentTotalLabel"
        android:layout_marginTop="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/moneySpentTotalLabel"
        android:layout_alignEnd="@+id/moneySpentTotalLabel" />


</RelativeLayout>
